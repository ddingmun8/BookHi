<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/pageMargin"
    android:layout_marginRight="@dimen/pageMargin">

    <androidx.cardview.widget.CardView
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:cardCornerRadius="20dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/light_nick_bg"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView_book"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:padding="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/bookhi_nick_logo_final" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:padding="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pageName"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="제목 : 소년과 두더지와 여우와 말" />

                <TextView
                    android:id="@+id/bookDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="날짜 : 2022-02-10 ~ 2022-02-15" />

                <TextView
                    android:id="@+id/bookRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="평점 : ★★★★☆" />

                <Button
                    android:id="@+id/btnReview"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/light_nick">

                </Button>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>

