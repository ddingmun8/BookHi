<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textStyle="bold"
        android:text="기록하고, 기억하기" />

    <View
        android:layout_width="80dp"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@color/nick" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:text="독서기간"
        android:textStyle="bold" />

    <View
        android:layout_width="55dp"
        android:layout_height="1dp"
        android:layout_marginBottom="15dp"
        android:background="@color/light_nick" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="8">

        <android.widget.Button
            android:id="@+id/btnStartDt"
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:background="@drawable/calendar"
            android:layout_marginRight="5dp"
            android:backgroundTint="@color/light_nick"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tvStartDt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:text="시작날짜"/>

        <android.widget.Button
            android:id="@+id/btnEndDt"
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:background="@drawable/calendar"
            android:backgroundTint="@color/light_nick"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tvEndDt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:text="종료일"/>

    </LinearLayout>

    <!--<DatePicker android:id="@+id/dpSpinner" android:datePickerMode="spinner" android:calendarViewShown="false" android:layout_width="wrap_content" android:layout_height="wrap_content"/>-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:text="평가하기"
        android:textStyle="bold" />

    <View
        android:layout_width="55dp"
        android:layout_height="1dp"
        android:layout_marginBottom="15dp"
        android:background="@color/light_nick" />

    <RatingBar
        android:id="@+id/ratingBook"
        android:layout_width="wrap_content"
        style="@style/Widget.AppCompat.RatingBar.Indicator"
        android:layout_height="30dp"
        android:stepSize="0.5"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:text="메모하기"
        android:textStyle="bold" />

    <View
        android:layout_width="55dp"
        android:layout_height="1dp"
        android:layout_marginBottom="15dp"
        android:background="@color/light_nick" />
    <EditText
        android:id="@+id/etMemo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/light_nick"/>

</LinearLayout>